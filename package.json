{
	"name": "fee-collector-monitor",
	"version": "1.0.0",
	"description": "LiFi Fee Collection Event API - Take-home Assignment",
	"main": "./dist/server/app.js",
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"start": "node dist/app.js",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"format": "prettier --write \"src/**/*.ts\"",
		"format:check": "prettier --check \"src/**/*.ts\"",
		"format:all": "npm run lint:fix && npm run format",
		"check": "npm run lint && npm run format:check",
		"type-check": "tsc --noEmit",
		"test": "jest --verbose",
		"test:unit": "jest --testPathIgnorePatterns=e2e",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:e2e": "jest --testPathPattern=e2e --runInBand",
		"test:e2e:watch": "jest --testPathPattern=e2e --watch",
		"test:e2e:events": "jest src/e2e/event.controller.e2e.ts",
		"test:clear-cache": "jest --clearCache",
		"test:redis": "npx ts-node ./src/services/redis-test.service.ts",
		"test:gap-processor": "npx ts-node ./src/services/gap-processor-test.service.ts"
	},
	"dependencies": {
		"@ethersproject/abstract-provider": "^5.8.0",
		"@lifi/types": "^17.16.0",
		"@typegoose/typegoose": "^12.16.0",
		"@types/eslint": "^9.6.1",
		"@types/jest": "^29.5.14",
		"@types/supertest": "^6.0.3",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.32.1",
		"@typescript-eslint/parser": "^8.32.1",
		"bignumber.js": "^9.3.0",
		"cors": "^2.8.5",
		"dotenv": "^16.5.0",
		"eslint": "^9.27.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.4.0",
		"ethers": "5",
		"express": "^5.1.0",
		"http-status": "^2.1.0",
		"ioredis": "^5.6.1",
		"mongoose": "^8.15.0",
		"prettier": "^3.5.3",
		"supertest": "^7.1.1",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"ts-jest": "^29.3.4",
		"uuid": "^11.1.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.27.0",
		"@types/cors": "^2.8.18",
		"@types/express": "^5.0.2",
		"@types/ioredis": "^5.0.0",
		"@types/mongoose": "^5.11.96",
		"@types/node": "^22.15.21",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.8",
		"jest": "^29.7.0",
		"jest-mock-extended": "^4.0.0-beta1",
		"mongodb-memory-server": "^10.1.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"roots": [ "<rootDir>/src" ],
		"testMatch": [
			"**/*.test.ts",
			"**/*.spec.ts",
			"**/*.e2e.ts"
		],
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/*.test.ts",
			"!src/**/*.spec.ts",
			"!src/**/*.d.ts",
			"!src/**/*.e2e.ts"
		],
		"testTimeout": 260000,
		"maxWorkers": 1,
		"forceExit": true,
		"detectOpenHandles": true,
		"verbose": true,
		"collectCoverage": true,
		"coverageReporters": [
			"text",
			"lcov",
			"html"
		]
	}
}
